<div class="page-header">
  <h1>Listing cities</h1>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Id</th>
      <th>Name</th>
      <th>Coordinate</th>
      <th>Country</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @cities.each do |city| %>
      <tr>
        <td><%= city.id %></td>
        <td><%= city.name %></td>
        <td><%= city.coordinate_id %></td>
        <td><%= city.country %></td>
        <td><%= link_to 'Show', [:administrator, city], class: 'btn btn-default btn-xs' %></td>
        <td><%= link_to 'Edit', edit_administrator_city_path(city), class: 'btn btn-default btn-xs' %></td>
        <td><%= link_to 'Destroy', [:administrator, city], method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-xs btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New City', new_administrator_city_path, class: 'btn btn-primary' %>
