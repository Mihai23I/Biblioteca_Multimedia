<%= form_for([:administrator, @client], html: { class: 'form-horizontal client' }) do |f| %>
  <% if @client.errors.any? %>
    <div id="error_explanation" class="panel panel-danger">
      <div class="panel-heading">
        <h2 class="panel-title"><%= pluralize(@client.errors.count, "error") %> prohibited this client from being saved:</h2>
      </div>
      <div class="panel-body">
        <ul>
        <% @client.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :id, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.number_field :id, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :name, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :name, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :phone, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :phone, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :address, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :address, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :unique_identifier_code, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :unique_identifier_code, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :other_information, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_area :other_information, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-md-offset-2 col-md-10">
      <%= f.submit nil, class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
